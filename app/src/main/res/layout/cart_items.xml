<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgProdCart"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtProName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Samsung note 10 plus"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtProPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21.000.000Ä‘"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/counterDE"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:gravity="center_horizontal"
                    android:text="-"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/counterValue"
                    android:layout_width="60dp"
                    android:layout_height="45dp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="1" />

                <Button
                    android:id="@+id/counterIN"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:gravity="center_horizontal"
                    android:text="+"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>